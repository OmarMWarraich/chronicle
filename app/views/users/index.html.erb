<h1>Users</h1>

<p>Here is the list of users:</p>

<div>
<ul>
  <% @users.each do |user| %>
  <li>
    <div>User Image</div>
    <div>
      <h2><a><%= user.name %></a></h2>
      <span>Number of posts:<%= user.posts_counter %></span>
    </div>
  </li>
  <li>
    <%= link_to "Show this user", user %>
  </li>
  <br>
  <br>
  <br>
<% end %>
</div>
</ul>
